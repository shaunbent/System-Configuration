[user]
	email = shaunbent@me.com
	name = Shaun Bent

[alias]
  st = status
  sts = status -sb
  unstage = reset HEAD --

[core]
  excludesfiles = ~/.gitignore_global
  excludesfile = /Users/bents02/.gitignore_global

[http]
  proxy = www-cache.reith.bbc.co.uk:80

[color]
  ui = true
  commit = red

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = green
  changed = red
  untracked = blue

[push]
	default = current

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

  name = Shaun Bent

[alias]
  st = status
  sts = status -sb
  unstage = reset HEAD --

[core]
  excludesfiles = ~/.gitignore_global

[http]
  proxy = www-cache.reith.bbc.co.uk:80

[color]
  ui = true
  commit = red

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = green
  changed = red
  untracked = blue

[push]
	default = current
